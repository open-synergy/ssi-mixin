<odoo>
<record id="test_custom_information_view_tree" model="ir.ui.view">
    <field name="name">test.custom_information tree</field>
    <field name="model">test.custom_information</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name" />
        </tree>
    </field>
</record>

<record id="test_custom_information_view_form" model="ir.ui.view">
    <field name="name">test.custom_information form</field>
    <field name="model">test.custom_information</field>
    <field name="arch" type="xml">
        <form>
            <header />
            <sheet>
            <div class="oe_button_box" name="button_box" />
            <div class="oe_left" style="width: 500px;">
                <div class="oe_title" style="width: 500px;">
                    <label for="name" />
                    <h1>
                        <field name="name" />
                    </h1>
                </div>
            </div>

            <group>
                <group name="left">
                    <field name="partner_id" />
                </group>
            </group>
            <notebook>
                <page name="custom_information" string="Custom Information">
                    <group name="custom_info">
                        <field name="custom_info_template_id" />
                        <button
                                    name="action_reload_custom_info_template"
                                    string="Reload Custom Info Template"
                                    type="object"
                                />
                        <button
                                    name="action_reload_custom_info"
                                    string="Reload Custom Info"
                                    type="object"
                                />
                    </group>
                    <group name="detail_info" colspan="4" col="2">
                        <field name="custom_info_ids" colspan="4" nolabel="1" />
                    </group>
                </page>
            </notebook>
        </sheet>
        </form>
    </field>
</record>

<record id="test_custom_information_action" model="ir.actions.act_window">
    <field name="name">Test Custom Information</field>
    <field name="res_model">test.custom_information</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="test_custom_information_menu"
        name="Test"
        parent="ssi_custom_information_mixin.menu_custom_information"
        action="test_custom_information_action"
        sequence="91009"
    />
</odoo>
